<form action="/template/<%= params[:id] %>" method="post">
  <div class="mb-3">
    <label for="title_template" class="form-label">ファイル名</label>
    <input type="text" id="title_template" name="title_template" value="<%= @title_template %>" class="form-control">
  </div>
  <div class="mb-3">
    <label for="content" class="form-label">コード</label>
    <textarea id="content" name="content" class="form-control"><%= @content %></textarea>
  </div>
  <div>
    <input type="hidden" name="_method" value="patch">
    <input type="submit" value="保存" class="btn btn-primary">
  </div>
</form>